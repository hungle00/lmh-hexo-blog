
<div class="max-w-xl mx-auto px-5 md:max-w-3xl" id="wrapper">
  <header class="header mt-28 mb-12">
    <h1 class="mt-3 mb-4 text-3xl text-center"><%=page.title%></h1>
    <p class="text-center leading-7 opacity-80"><%=page.description%></p>
  </header>
  <main class="page-content" aria-label="Content">
    <% if (page.type === "tags") { %> 
      <div class="tags">
        <%- list_tags({ class: "tag" }) %>
      </div>
    <% } %>
    <div class="post">
      <%-page.content%>
    </div>
    <%- partial('partials/_comments/index') %>
  </main>
</div>