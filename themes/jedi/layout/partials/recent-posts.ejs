
<% if (page.posts.length > 0) { %>
    <h3 class="text-lg font-bold mb-2" aria-label="Recent Posts">Recent Posts</h3>
    <% page.posts.sort('date', -1).limit(10).each(post => { %>
      <article class="flex py-2 border-t border-grey-600">
        <span class="text-base font-bold pr-3" datetime="<%=post.date.toJSON()%>"><%- date(post.date, 'MMM DD, YYYY') %></span>
        <h4 class="text-base tracking-wide">
          <a href="<%=url_for(post.path)%>" class="hover:text-slate-700"><%=post.title%></a>
        </h4>
      </article>
    <% }); %>
<% } %>
