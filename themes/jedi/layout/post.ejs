
<div class="wrapper post">
  <main class="page-content" aria-label="Content">
    <header class="mt-28 mb-12">
      <% if(page.tags.length > 0){ %>
        <div class="ml-1 tracking-wider">
          <% (page.tags || []).forEach(function(item) { %><a href="<%= url_for(item.path) %>" class="text-sm font-bold mr-2"># <%= item.name %></a><% }); %>
        </div>
      <% } %>
      <h1 class="post-title" itemprop="headline"><%=page.title%></h1>
        <div class="post-meta">
          <time><%- date(page.date, 'MMM DD, YYYY') %></time>
          <span itemprop="author">
            <span itemprop="name"><%=config.author%></span>
          </span>
        </div>
      </header>

      <div class="page-content"><%-page.content%></div>
      <%-partial('partials/pagination')%>
   </main>
</div>
