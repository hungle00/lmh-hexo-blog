
<div class="max-w-xl mx-auto px-5 md:max-w-3xl" id="wrapper">
  <div class="page-content">
      <header class="header mt-28 mb-12">
        <h1 class="mt-3 mb-4 text-3xl text-center"><%=page.tag%></h1>
      </header>
      <% var last_year = ''; %>
      <% page.posts.each(article => { %>
        <% var cur_year = article.date.year(); %>
        <% if(last_year !== cur_year){ %>
        <h2 class="flex justify-between mb-1"><%- cur_year %><svg xml="<%- getAnimalIcon(cur_year) %>" class="icon"></svg></h2>
        <% last_year = cur_year; } %>
        <div class="post-item">
          <a class="post-item-title"  href="<%=url_for(article.path)%>">
            <%=article.title%>
          </a>
        </div>
      <% }) %>
    </div>
</div>